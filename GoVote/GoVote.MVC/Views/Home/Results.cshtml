@using GoVote.MVC.Models
@model IEnumerable<GoVote.MVC.Models.QuestionResponse>

@{
    if (@Model != null)
    {
        <div id="chart"></div>

        <script>
            var chart = c3.generate({
                data: {
                    columns: [
                        @{
                            foreach (QuestionResponse q in Model)
                            {
                                <text>['@q.AnswerText', @q.Count],   </text>
                            }
                        }
                    ],
                    type: 'pie'
                },
                tooltip: {
                    format: {
                        value: function (value, ratio, id) {
                            return value;
                        }
                    }
                }
            });
        </script>
    }
    else
    {
        <h2> No data avalabile....</h2>
    }
}


